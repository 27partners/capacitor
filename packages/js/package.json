{
  "name": "avocado-js",
  "version": "1.0.0",
  "description": "",
  "homepage": "",
  "author": "Ionic Team",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run clean && npm run transpile && npm run rollup && npm run minify",
    "clean": "rimraf dist",
    "minify": "npm run minify.core && npm run minify.plugins && npm run minify.avocado",
    "minify.avocado": "uglifyjs --mangle --compress --output dist/avocado.js dist/avocado.core.js dist/avocado.plugins.js",
    "minify.core": "uglifyjs --mangle --compress --source-map \"content='dist/esm/avocado.js.map',url='avocado.core.js.map'\" --output dist/avocado.core.js dist/esm/avocado.js",
    "minify.plugins": "uglifyjs --mangle --compress --source-map \"content='dist/avocado.plugins.js.map',url='avocado.plugins.js.map'\" --output dist/avocado.plugins.js dist/avocado.plugins.js",
    "rollup": "rollup --config rollup.config.js",
    "transpile": "tsc --module ES2015 --target ES5 --outDir dist/esm"
  },
  "main": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "devDependencies": {
    "rimraf": "^2.6.1",
    "rollup": "^0.52.0",
    "tslint": "^5.6.0",
    "tslint-ionic-rules": "0.0.8",
    "typescript": "^2.6.2",
    "uglify-js": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ionic-team/avocado-js.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/avocado-js/issues"
  }
}
